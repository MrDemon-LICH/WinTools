<Window x:Class="WinTools.CustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Confirmación"
        MinHeight="200"
        MinWidth="400"
        MaxHeight="600"
        MaxWidth="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="False">

    <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="10" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header con icono y título -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icono de advertencia -->
                <TextBlock x:Name="IconTextBlock"
                          Grid.Column="0"
                          Text="⚠️"
                          FontSize="24"
                          Margin="0,0,15,0"
                          VerticalAlignment="Top"/>

                <!-- Título -->
                <TextBlock x:Name="TitleTextBlock"
                          Grid.Column="1"
                          Text="Confirmar acción"
                          FontSize="16"
                          FontWeight="SemiBold"
                          Foreground="{DynamicResource ForegroundBrush}"
                          VerticalAlignment="Center"/>
            </Grid>

            <!-- Mensaje -->
            <TextBlock x:Name="MessageTextBlock"
                      Grid.Row="1"
                      Text="¿Está seguro de que desea continuar?"
                      FontSize="14"
                      Foreground="{DynamicResource SecondaryForegroundBrush}"
                      TextWrapping="Wrap"
                      Margin="0,0,0,20"/>

            <!-- Botones -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="YesButton"
                        Content="Sí"
                        Style="{StaticResource CustomDialogButtonStyle}"
                        Click="YesButton_Click"
                        Visibility="Collapsed"
                        Margin="0,0,10,0"/>
                <Button x:Name="NoButton"
                        Content="No"
                        Style="{StaticResource CustomDialogButtonStyle}"
                        Click="NoButton_Click"
                        Visibility="Collapsed"
                        Margin="0,0,10,0"/>
                <Button x:Name="CancelButton"
                        Content="Cancelar"
                        Style="{StaticResource CustomDialogButtonStyle}"
                        Click="CancelButton_Click"
                        Visibility="Collapsed"
                        Margin="0,0,10,0"/>
                <Button x:Name="OkButton"
                        Content="Aceptar"
                        Style="{StaticResource CustomDialogButtonStyle}"
                        Click="OkButton_Click"
                        Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
